#cloud-config

# add each entry to ~/.ssh/authorized_keys for the configured user or the
# first user defined in the user definition directive.
$SSH_AUTHORIZED_KEYS
hostname: $K8S_node

coreos:
    units:
      - name: 10-ens3.network
        content: |
          [Match]
          MACAddress=$K8S_mac2

          [Network]
          Address=$K8S_ip2
      - name: 20-dhcp.network
        content: |
          [Match]
          name=en*

          [Network]
          DHCP=yes
