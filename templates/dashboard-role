apiVersion: v1
kind: ServiceAccount
metadata:
  name: $EMAIL_ADDRESS_OF_ADMIN
  namespace: kube-system

apiVersion: rbac.authorization.k8s.io/v1beta1
kind: ClusterRoleBinding
metadata:
  name: $EMAIL_ADDRESS_OF_ADMIN
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: cluster-admin
subjects:
- kind: ServiceAccount
  name: $EMAIL_ADDRESS_OF_ADMIN
  namespace: kube-system
